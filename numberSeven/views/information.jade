html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    title Triplana
    link(rel='stylesheet', href='/css/material.min.css')
    link(rel='stylesheet', href='/css/infor.css')
    script(src='/js/material.min.js')
