  link(href='css/base.css', rel='stylesheet')
  // Google web fonts
  link(href='http://fonts.googleapis.com/css?family=Montserrat:400,700', rel='stylesheet', type='text/css')
  link(href='http://fonts.googleapis.com/css?family=Gochi+Hand', rel='stylesheet', type='text/css')
  link(href='http://fonts.googleapis.com/css?family=Lato:300,400', rel='stylesheet', type='text/css')
  //if lt IE 9
    script(src='js/html5shiv.min.js')
    script(src='js/respond.min.js')

block content
  section#hero.login
    .container
      .row
        .col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
          #login
            .text-center
              img(src='images/logo_sticky.png', alt='', data-retina='true')
            if errors
              hr
              each error, i in errors
                li.alert.alert-danger #{error.msg}
            hr
            form(method='post', action='/register', enctype='multipart/form-data')
              .form-group
                label Email
                input.form-control(name='email', type='email', placeholder='Email')
              .form-group
                label Username
                |                                     
                input.form-control(name='username', type='text', placeholder='Username')
              |                                                                  
              .form-group
                label Password
                |                                     
                input#password1.form-control(name='password', type='password', placeholder='Password')
              |                                 
              .form-group
                label Confirm password
                |                                     
                input#password2.form-control(name='passwordconfirm', type='password', placeholder='Confirm password')
              |                                 
              #pass-info.clearfix
              |                                 
              button.btn_full(name='submit', type='submit', value="Create an account") 
                | Create an account